@model Proyecto1_AndrésEsteller.Models.Usuario
@{
    ViewData["Title"] = "Registro";
}

<h2>Registro de Usuario</h2>

<form asp-action="Registro" method="post">
    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" required />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" type="email" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Contraseña</label>
        <input asp-for="PasswordHash" class="form-control" type="password" required />
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Registrarse</button>
</form>
<br />
<a asp-action="Login" class="btn btn-secondary">Iniciar Sesión</a>

